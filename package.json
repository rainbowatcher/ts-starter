{
  "name": "ts-starter",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@8.6.0",
  "description": "",
  "author": "rainbowatcher <rainbow-w@qq.com>",
  "license": "MIT",
  "homepage": "https://github.com/rainbowatcher/ts-starter#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rainbowatcher/ts-starter.git"
  },
  "bugs": {
    "url": "https://github.com/rainbowatcher/ts-starter/issues"
  },
  "keywords": [
    "ts-starter"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pkgroll",
    "lint": "eslint .",
    "prepare": "husky install",
    "release": "bumpp && npm publish",
    "start": "jiti src/index.ts",
    "test": "uvu -r jiti/register test",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@rainbowatcher/eslint-config": "0.2.1",
    "@types/node": "^18.16.16",
    "bumpp": "^9.1.0",
    "commitlint": "^17.6.3",
    "eslint": "^8.41.0",
    "husky": "^8.0.3",
    "jiti": "^1.18.2",
    "lint-staged": "^13.2.2",
    "pkgroll": "^1.10.0",
    "typescript": "^5.0.4",
    "uvu": "^0.5.6"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue,json}": "eslint --fix"
  }
}
